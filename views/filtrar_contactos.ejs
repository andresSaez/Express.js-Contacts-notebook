<%- include('cabecera'); %>

<h1>Formulario para filtrar contactos</h1>

<div id="nuevoError" class="alert alert-danger">
        Criterios de búsqueda no válidos
</div>

<div id="nuevoOK" class="alert alert-success">
        Buscando...
</div>

<div class="form-group">
    <label for="telefono">Teléfono a buscar (se buscarán coincidencias con el inicio del teléfono):</label>
    <input type="text" class="form-control" id="telefono" name="telefono" value="0" pattern="[0-9]{1,9}" required />
</div>
<div class="form-group">
        <label for="edad">Edad máxima:</label>
        <input type="number" class="form-control" id="edad" name="edad" value="0" pattern="\d+" required />
</div>
<button class="btn btn-secondary" onclick="filtrarContacto()">Enviar</button>

