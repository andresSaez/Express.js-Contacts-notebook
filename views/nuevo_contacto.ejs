<%- include('cabecera'); %>

<h1>Formulario de alta de nuevo contacto</h1>

<div id="nuevoError" class="alert alert-danger">
  Error añadiendo el contacto
</div>

<% if (error) { %>
<div id="errorEspecifico" class="alert alert-danger"><%= mensajeError %></div>
<% } %>

<% if (mensajeOk) { %>
  <div id="OK" class="alert alert-success">
    Contacto añadido correctamente
  </div>
<% } %>


<form action="/contactos" id="nuevoContacto" enctype="multipart/form-data" method="post">
  <div class="form-group">
    <label for="nombre">Nombre:</label>
    <input type="text" class="form-control" id="nombre" name="nombre" />
  </div>
  <div class="form-group">
    <label for="telefono">Teléfono:</label>
    <input type="text" class="form-control" id="telefono" name="telefono" />
  </div>
  <div class="form-group">
    <label for="edad">Edad:</label>
    <input type="number" class="form-control" id="edad" name="edad" />
  </div>
  <div class="form-group">
    <label for="tipo">Tipo de contacto: </label>
    <select id="tipo" name="tipo">
          <% tipos.forEach(tipo => { %>
            <option value="<%= tipo.id %>"><%= tipo.nombre %></option>
          <% }); %>
    </select>
  </div>
  <div class="form-group">
    <label for="fichero">Fichero:</label>
    <input type="file" id="fichero" name="fichero" /><br />
  </div>
 <!--<button class="btn btn-secondary" onclick="nuevoContacto()">Enviar</button>-->
 <button class="btn btn-secondary" type="submit">Enviar</button>
</form>

<%- include('pie'); %>

