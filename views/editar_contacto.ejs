<%- include('cabecera'); %>

<h1>Editar contacto</h1>

<% if (error) { %>
<div id="errorEspecifico" class="alert alert-danger"><%= mensajeError %></div>
<% } %>

<% if (mensajeOk) { %>
  <div id="ok" class="alert alert-success">
    Contacto añadido correctamente
  </div>
<% } %>

<!--<form action="/contactos" id="editarContacto" enctype="multipart/form-data" method="put">-->
<form action="" id="editarContacto" enctype="multipart/form-data" method="">
  <div class="form-group">
    <label for="nombre">Nombre:</label>
    <input type="text" class="form-control" id="nombre" name="nombre" value="<%=contactos.nombre%>"/>
  </div>
  <div class="form-group">
    <label for="telefono">Teléfono:</label>
    <input type="text" class="form-control" id="telefono" name="telefono" value="<%=contactos.telefono%>"/>
  </div>
  <div class="form-group">
    <label for="edad">Edad:</label>
    <input type="number" class="form-control" id="edad" name="edad" value="<%=contactos.edad%>"/>
  </div>
  <div class="form-group">
      <label for="tipo">Tipo de contacto: </label>
      <select id="tipo" name="tipo">
            <% tipos.forEach(tipo => { %>
              <option value="<%= tipo.id %>"><%= tipo.nombre %></option>
            <% }); %>
      </select>
    </div>
  <div class="form-group">
    <label for="fichero">Fichero:</label>
    <input type="file" id="fichero" name="fichero" /><br />
  </div>
 <button class="btn btn-secondary" onclick='editarContacto("<%= contactos.id %>")'>Editar</button>
</form>

<%- include('pie'); %>

